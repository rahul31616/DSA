#include <bits/stdc++.h>
using namespace std;

void printDuplicates(string str) {
    unordered_map<char, int> freq;

    // Count frequency of each character
    for (char c : str) {
        if (c != ' ') // Ignore spaces
            freq[tolower(c)]++; // convert to lowercase for case-insensitive
    }

    // Print characters with count > 1
    bool hasDuplicates = false;
    for (auto pair : freq) {
        if (pair.second > 1) {
            cout << pair.first << " : " << pair.second << endl;
            hasDuplicates = true;
        }
    }

    if (!hasDuplicates)
        cout << "No duplicate characters found." << endl;
}

int main() {
    string input = "Programming in C++";
    printDuplicates(input);
    return 0;
}
