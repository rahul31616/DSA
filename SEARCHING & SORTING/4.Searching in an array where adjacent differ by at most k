#include <iostream>
using namespace std;

int search(int arr[], int n, int x, int k) {
    int i = 0;
    while (i < n) {
        if (arr[i] == x)
            return i;

        // Jump ahead by max(1, abs difference / k)
        int jump = max(1, abs(arr[i] - x) / k);
        i += jump;
    }
    return -1; // Not found
}

int main() {
    int arr[] = {4, 5, 6, 7, 6};
    int n = sizeof(arr) / sizeof(arr[0]);
    int x = 6, k = 1;

    int index = search(arr, n, x, k);

    if (index != -1)
        cout << "Element found at index " << index << endl;
    else
        cout << "Element not found" << endl;

    return 0;
}
