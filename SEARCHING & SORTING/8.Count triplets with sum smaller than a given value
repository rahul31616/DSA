#include <bits/stdc++.h>
using namespace std;

int countTriplets(int arr[], int n, int target) {
    sort(arr, arr + n);
    int count = 0;

    for (int i = 0; i < n - 2; i++) {
        int left = i + 1, right = n - 1;

        while (left < right) {
            int sum = arr[i] + arr[left] + arr[right];

            if (sum < target) {
                // All elements from left+1 to right will form valid triplets with i and left
                count += (right - left);
                left++;
            } else {
                right--;
            }
        }
    }

    return count;
}

int main() {
    int arr[] = {5, 1, 3, 4, 7};
    int n = sizeof(arr) / sizeof(arr[0]);
    int target = 12;

    cout << "Count of triplets: " << countTriplets(arr, n, target);
    return 0;
}
