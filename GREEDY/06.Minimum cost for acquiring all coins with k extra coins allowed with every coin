int minCost(vector<int>& coins, int k) {
    sort(coins.begin(), coins.end());
    int n = coins.size();
    int needed = (n + k) / (k + 1);  // same as ceil(n / (k+1))
    int sum = 0;
    for (int i = 0; i < needed; ++i) {
        sum += coins[i]; // pay for the cheapest ones
    }
    return sum;
}
