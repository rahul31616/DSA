#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    int climbStairs(int n) {
        if (n <= 1) return 1;
        int prev1 = 1;  // ways to reach step 1
        int prev2 = 1;  // ways to reach step 0

        for (int i = 2; i <= n; ++i) {
            int curr = prev1 + prev2;
            prev2 = prev1;
            prev1 = curr;
        }

        return prev1;
    }
};

// Example usage:
int main() {
    Solution sol;
    cout << sol.climbStairs(4) << endl;  // Outputs: 5
    return 0;
}
