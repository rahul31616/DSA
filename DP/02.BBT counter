#include <bits/stdc++.h>
using namespace std;

class Solution {
public:
    static const long long MOD = 1000000007;

    long long countBBT(int h) {
        if (h < 2) return 1;  // covers both h = 0 and h = 1

        long long dp0 = 1;  // count(0)
        long long dp1 = 1;  // count(1)
        long long dp2 = 0;

        for (int i = 2; i <= h; ++i) {
            dp2 = (dp1 * ((2LL * dp0) % MOD + dp1) % MOD) % MOD;
            dp0 = dp1;
            dp1 = dp2;
        }

        return dp2;
    }
};

int main() {
    int h;
    cin >> h;
    Solution sol;
    cout << sol.countBBT(h) << '\n';
    return 0;
}
