class Solution {
public:
    ListNode* reverseList(ListNode* head) {
        ListNode* prev = NULL;
        ListNode* curr = head;

        while (curr != NULL) {
            ListNode* next = curr->next;  // Store next
            curr->next = prev;            // Reverse the link
            prev = curr;                  // Move prev forward
            curr = next;                  // Move curr forward
        }

        return prev; // New head
    }
};
