#include <iostream>
#include <vector>
using namespace std;

// Function to reverse the array in-place using the two-pointer approach
void reverseArray(vector<int>& arr) {
    int start = 0;
    int end = arr.size() - 1;

    // Swap elements from both ends moving towards the center
    while (start < end) {
        swap(arr[start], arr[end]);
        start++;
        end--;
    }
}

// Utility function to print the elements of the array
void printArray(const vector<int>& arr) {
    for (int num : arr) {
        cout << num << " ";
    }
    cout << endl;
}

int main() {
    // Sample input array
    vector<int> arr = {1, 2, 3, 4, 6};

    cout << "Original Array: ";
    printArray(arr);

    // Reverse the array
    reverseArray(arr);

    cout << "Reversed Array: ";
    printArray(arr);

    return 0;
}
