#include <bits/stdc++.h>
using namespace std;

int squareRecursive(int n) {
    if (n == 0) return 0;
    if (n < 0)  n = -n;

    int x = n >> 1;  // floor(n / 2)
    if (n & 1)
        return (squareRecursive(x) << 2) + (x << 2) + 1;
    else
        return (squareRecursive(x) << 2);
}

int squareBitwise(int num) {
    if (num < 0) num = -num;

    int result = 0, power = 0;
    int temp = num;
    while (temp) {
        if (temp & 1) {
            result += (num << power);
        }
        power++;
        temp >>= 1;
    }
    return result;
}

int main() {
    for (int n = 1; n <= 10; ++n) {
        cout << "n = " << n
             << " | recursive method: " << squareRecursive(n)
             << " | bitwise method: " << squareBitwise(n) << endl;
    }
    return 0;
}
